<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost & Found</title>
    <link rel="stylesheet" href="stylesheets/index.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <h1>Lost & Found portal VITAP</h1>
    <a class="uploadpagebutton" href="upload"><button>found a lost item?</button></a>
    <a class="profilepagebutton" href="profile"><button>your profile</button></a>
    <a class="logout" href="logout"><button>logout</button></a>
    <div class="main w-full min-h-screen bg-zinc-900 p-10 text-white">
        <div class ="your found items flex gap-3 flex-wrap px-10">
            <% if(items.length) { %>
            <% items.reverse().forEach(function(item){ %>
                <a href="/items/<%= item._id %>">
                <div class = "item w-72 px-5 py-3 rounded-md bg-zinc-800">
                    <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                        <% item.images.forEach(function(image) { %>
                    <img src="/images/itemimage/<%=image.filename%>" alt="<%= image.originalname %>">
                    <% }) %>
                    </div>
                    <h1 class="text-white text-2xl tracking-tighter"><%= item.title %></h1>
                    <h1 class="text-white text-2xl tracking-tighter"><%= item.itemType %> found at <%= item.building %> <%= item.specificArea %> </h1>
                </div>
            </a>
            <% }) %>
            <% } else { %>
                <h3 class="text-white">no lost items yet</h3>
            <% } %>
        </div>
    </div>
    <script src="/index.js"></script>
</body>
</html>