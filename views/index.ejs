<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lost & Found</title>
    <link rel="stylesheet" href="stylesheets/index.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <h1>Lost & Found portal VITAP</h1>
    <a class="uploadpagebutton" href="lostupload"><button>found a lost item?</button></a>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class ="your found items flex gap-3 flex-wrap px-10">
            <% if(items.length>0){%>
                <% items.forEach(function(val) { %>
                    <div class = "item w-72 px-5 py-3 rounded-md bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tighter"><%= val %></h1>
                        <h1 class="text-white text-2xl tracking-tighter"><%= %></h1>
                        <a class="text-blue-500 inline-block mt-3" href="/items/<%= val %>">post link</a>
                    </div>
                <% }) %>
            <% }else{ %>
                <h3 class="text-white">no lost items yet</h3>
            <% } %>
        </div>
    </div>
    <script src="/index.js"></script>
</body>
</html>