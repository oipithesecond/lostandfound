<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <h1>Lost & Found portal VITAP</h1>
    <a class="uploadpagebutton" href="upload"><button>found a lost item?</button></a>
    <a class="profilepagebutton" href="profile"><button>your profile</button></a>
    <a class="logout" href="logout"><button>logout</button></a>
    <div class="main w-full min-h-screen bg-zinc-900 p-10 text-white">
        <h3 class="text-3xl mb-5">Hello, <%= user.name %></h3>
        <div class="posts mt-28">
            <h3> your recently found items</h3>
            <div class="postcontainer flex gap-3 flex-wrap px-10">
                <div class = "item w-72 px-5 py-3 rounded-md bg-zinc-800">
                    <%user.posts.forEach(function(post){ %>
                    <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
                    <% post.images.forEach(function(image) { %>
                    <img src="/images/itemimage/<%=image.filename%>" alt="<%= image.originalname %>">
                    <% }) %>
                    </div>
                    <h1 class="text-white text-2xl tracking-tighter"><%= post.title %></h1>
                    <h1 class="text-white text-2xl tracking-tighter"><%= post.itemType %> found at <%= post.building %> <%= post.specificArea %>  </h1>
                    <div class="flex gap-3 mt-10">
                        <a class="text-red-500" href="/delete/<%= post._id %>">Delete Item</a>
                    </div>
        
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>